    // "isolatedModules": true,
    // "noEmit": true,
    // "composite": true,
    "jsx": "react-jsx",
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"],
}
